<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hm_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="15dp" >

            <ImageView android:id="@+id/itm_img"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                android:background="#1dff820b" />

            <TextView android:id="@+id/itm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:typeface="serif" />

            <TextView android:id="@+id/itm_desc"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="New Text"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.56"
                android:layout_margin="10dp"
                android:background="#05fff6f0"
                android:padding="3dp"
                android:textStyle="italic"
                android:typeface="sans"
                android:textColor="#ffb308" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0affffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11">

            <ImageButton
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:id="@+id/item_buttonRate"
                android:background="@drawable/eartico"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/item_likescount"
                android:padding="3dp"
                android:textStyle="italic"
                android:typeface="sans"
                android:textColor="#ffb308"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It&apos;s not a pug?"
            android:id="@+id/item_report"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:typeface="serif"
            android:textAppearance="@android:style/Widget.Button.Small"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:textColor="#ffb308"
            android:gravity="center_vertical|right" />

    </LinearLayout>

</LinearLayout>
